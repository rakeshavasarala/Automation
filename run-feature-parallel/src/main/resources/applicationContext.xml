<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <!-- this will enable us to autowire the step defs -->
    <context:component-scan base-package="com.ui"/>

    <!-- Classes that need to be autowired into tests -->
    <bean id="webDriverDiscovery" class="framework.WebDriverDiscovery"
          destroy-method="close">
        <constructor-arg>
            <value>firefox</value>
        </constructor-arg>
    </bean>

    <bean id="glueCodeScope" class="cucumber.runtime.java.spring.GlueCodeScope">
    </bean>

    <bean id="glueCodeScopeConfigurer" class="org.springframework.beans.factory.config.CustomScopeConfigurer">
        <property name="scopes">
            <map>
                <entry key="cucumber-glue" value-ref="glueCodeScope"/>
            </map>
        </property>
    </bean>

</beans>